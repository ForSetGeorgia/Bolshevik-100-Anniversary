<nav>
  <div class="nav-logo-wrapper">
  <%= link_to image_tag('logo.svg'),
              root_path,
              target: '_blank',
              title: t('.logo'), class: 'nav-logo' %>
    <div class="nav-about">
      <div class="nav-separator"></div>
      <%= link_to t('.about'), about_path %>
    </div>
  </div>
  <div class="nav-slogan"><%= t('.slogan') %></div>
  <ul class="nav-menu">
    <% if user_signed_in? %>
      <li class="dropdown">
        <a href="#" id="user-dropdown" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
          <%= icon('user')%>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <% if current_user.is?(['super_admin', 'site_admin', 'content_manager']) %>
            <li><%= link_to t('shared.links.stories'), admin_stories_path %></li>
          <% end %>
          <% if current_user.is?(['super_admin', 'site_admin', 'content_manager']) %>
            <li><%= link_to t('shared.links.page_contents'), admin_page_contents_path %></li>
          <% end %>
          <% if current_user.is?(['super_admin', 'site_admin']) %>
            <li><%= link_to t('activerecord.models.user', count: 999), admin_users_path %></li>
          <% end %>
          <li class='divider'>

          </li>
          <li>
            <%= link_to t('.account.edit_profile'),
                        edit_user_registration_path %>
          </li>
          <li>
            <%= link_to t('.account.logout'),
                        destroy_user_session_path,
                        method: :delete %>
          </li>
        </ul>
      </li>
    <% end %>

    <li class="nav-lang">
      <ul class='language-switcher'>
        <% ln = I18n.available_locales.length %>
        <% I18n.available_locales.each_with_index do |locale, locale_i| %>
          <li class='<%= "active" if I18n.locale == locale %>'>
            <%= link_to t("shared.locale.long.#{locale}"),
                  url_for(locale: locale),
                  class: "#{I18n.locale == locale ? 'active' : nil}" %>
          </li>
          <% if ln != locale_i + 1 %>
            <li class="nag-lang-separator">/</li>
          <% end %>
        <% end %>
      </ul>
    </li>
  </ul>
  <ul class="nav-social">
    <li class="facebook"><%= link_to image_tag('fb.svg'),
            "https://facebook.com",
            target: '_blank',
            title: t("shared.common.facebook") %></li>
    <li class="twitter"><%= link_to image_tag('twitter.svg'),
            "https://twitter.com",
            target: '_blank',
            title: t('shared.common.twitter') %></li>
    <li class="linkedin"><%= link_to image_tag('linkedin.svg'),
            "https://linkedin.com",
            target: '_blank',
            title: t('shared.common.linkedin') %></li>
  </ul>
</nav>
